server {
	listen 80;
	server_name notset.ru;

	location /.well-known/acme-challenge/ {
		root /opt/letsencrypt/notset.ru;
	}

	location / {
		return 301 https://notset.ru$request_uri;
	}
}        

server {
	listen 443;
	server_name notset.ru;

	charset utf-8;
	index index.html index.php;

	root /srv/http/notset.ru/app;  

	ssl on;
	ssl_certificate /etc/letsencrypt/live/notset.ru/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/notset.ru/privkey.pem;
	ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;
	ssl_session_timeout 10m;
	ssl_session_cache    shared:SSL:10m;
	ssl_ciphers  EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
	ssl_prefer_server_ciphers on;    

	location / {
		try_files $uri $uri/ /index.php;
	}

 	location = /robots.txt {
		add_header Content-Type text/plain;
		return 200 "User-agent: *\nDisallow: /";
	}   

	location ~ \.php$ {
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
		fastcgi_index index.php;
		include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
	}
}
